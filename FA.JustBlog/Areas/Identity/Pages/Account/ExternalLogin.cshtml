@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<h1 id="external-login-title">@ViewData["Title"]: Associate your @Model.ProviderDisplayName account.</h1>
<hr />

<p id="external-login-description" class="text-info" style="margin-left: 150px">
    You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
    Please enter an email address for this site below and click the Register button to finish
    logging in.
</p>

<div class="row">
    <div class="col-md-5" style="margin-left: 150px">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating" style="margin-bottom: 20px;">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>